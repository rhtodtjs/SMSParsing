<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="9dp"
    android:weightSum="10"
    tools:context="kkk8888.smsparsing.MainActivity">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></ListView>

    <EditText
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="파싱시킬 번호 입력"
        android:inputType="phone"
        android:text="0977,4907" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="#25a52a2a"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="10">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="phone"
                    android:text="파싱시킬 번호 입력" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="DB 주소" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="DB 사용자 이름" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="DB 사용자 비밀번호" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="DB이름" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="DB 포트" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">


                <EditText
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="DB 사용자 이름"
                    android:inputType="text"
                    android:text="jun"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="DB 사용자 비밀번호"
                    android:inputType="text"
                    android:text="1234"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dbname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="DB이름"
                    android:inputType="text"
                    android:text="smsserver"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/portnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="DB 포트"
                    android:inputType="text"
                    android:text="3306"
                    android:visibility="invisible" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <EditText
    android:id="@+id/uri"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:hint="DB 주소"
    android:inputType="text"
    android:text="mirae5.ipdisk.co.kr"
    android:visibility="gone" />

    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="php주소"
        android:inputType="text"
        android:text="http://picksg.com/document/bank_do.php/"
        android:visibility="visible" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="김치볶음밥"
        android:inputType="text"
        android:text="rlaclqhRdmaqkq"
        android:visibility="visible" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="save"
        android:text="저장" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#25a52a2a"
        android:gravity="center"
        android:text="제작 : 강실장" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="9">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="start"
            android:text="SMS 로드" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="stop"
            android:text="테스트" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="refresh"
            android:text="리시브 시작" />

    </LinearLayout>


</LinearLayout>
